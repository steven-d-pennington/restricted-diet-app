FROM node:20-bullseye

# Install dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    unzip \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install Supabase CLI via npm (more reliable across architectures)
RUN npm install -g supabase

# Set working directory
WORKDIR /workspace

# Non-root user (VS Code Dev Containers best practice)
USER nodeFROM node:20-bullseye

